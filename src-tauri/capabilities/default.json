{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:allow-destroy",
    "core:window:allow-start-dragging",
    "process:default",
    "opener:default",
    "dialog:default",
    "fs:read-all",
    "fs:write-all",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "**"
        },
        {
          "path": "**/*"
        }
      ]
    },
    "keyring:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [{ "cmd": "/usr/bin/grep", "name": "grep", "args": true }]
    }
  ]
}
